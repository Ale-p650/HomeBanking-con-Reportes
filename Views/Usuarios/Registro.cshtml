@model Registro_ViewModel
@{
    ViewData["Title"] = "Registro";
}

<h1>Registrate</h1>

<form asp-action="Registro">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="my-4">
        <label asp-for="Mail" class="form-label"></label>
        <input asp-for="Mail" class="form-control"><input />
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>
    <div class="my-4">
        <label asp-for="Password" class="form-label"></label>
        <input type="password" asp-for="Password" class="form-control"><input />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Registrar</button>
    <a class="btn btn-success" asp-action="Login">Iniciar Sesion</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}